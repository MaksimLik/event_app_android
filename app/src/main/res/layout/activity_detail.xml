<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/download" />

    <TextView
        android:id="@+id/name_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name_of_event" />

    <TextView
        android:id="@+id/description_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description_of_event" />

    <TextView
        android:id="@+id/rating_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rating_of_event" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/repostButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/gps_img_color"
        app:backgroundTintMode="add"
        app:tint="#FFFFFF" />
</LinearLayout>